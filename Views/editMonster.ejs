<!-- editMonster.ejs -->
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier le Monstre</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-secondary text-light">

    <!-- Navbar incluse -->
    <%- include('partials/navbar') %>
    <%- include('partials/adminBackButton') %>
    <div class="container d-flex flex-column justify-content-center align-items-center mt-4">
        <h1 class="text-center text-warning mb-4">Modifier le Monstre</h1>

        <!-- Formulaire de modification -->
        <form action="/admin/monsters/edit/<%= monster.id %>" method="POST" class="d-flex flex-column w-50">
            <div class="mb-4">
                <label for="name" class="form-label fs-4">Nom du Monstre</label>
                <input type="text" id="name" name="name" class="form-control fs-4" value="<%= monster.name %>" required>
            </div>
            <div class="mb-4">
                <label for="hp" class="form-label fs-4">Points de Vie (HP)</label>
                <input type="number" id="hp" name="hp" class="form-control fs-4" value="<%= monster.hp %>" required>
            </div>
            <div class="mb-4">
                <label for="attack" class="form-label fs-4">Attaque</label>
                <input type="number" id="attack" name="attack" class="form-control fs-4" value="<%= monster.attack %>" required>
            </div>
            <div class="mb-4">
                <label for="defense" class="form-label fs-4">Défense</label>
                <input type="number" id="defense" name="defense" class="form-control fs-4" value="<%= monster.defense %>" required>
            </div>
            <button type="submit" class="btn btn-dark btn-lg text-warning">Mettre à jour</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
