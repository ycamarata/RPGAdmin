<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liste des Personnages Jouables</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-secondary text-light">

    <%- include('partials/navbar') %>
    <%- include('partials/adminBackButton') %>

    <div class="container mt-5">
        <h1 class="text-warning text-center">Personnages Jouables</h1>

        <% if (characters.length > 0) { %>
            <table class="table table-striped table-dark mt-4 text-center">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Points de Vie (HP)</th>
                        <th>Attaque</th>
                        <th>Défense</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% characters.forEach(character => { %>
                        <tr>
                            <td><%= character.name %></td>
                            <td><%= character.hp %></td>
                            <td><%= character.attack %></td>
                            <td><%= character.defense %></td>
                            <td>
                                <!-- Bouton Modifier -->
                                <a href="/admin/characters/edit/<%= character.id %>" class="btn btn-warning text-dark">Modifier</a>
                                <!-- Bouton Supprimer -->
                                <form action="/admin/characters/delete/<%= character.id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center text-muted mt-4">Aucun personnage jouable n'a été créé pour le moment.</p>
        <% } %>
    </div>

        <!-- Retour à l'ajout de personnage -->
        <div class="text-center mt-4">
            <a href="/admin/characters/add" class="btn btn-info text-dark">Ajouter un Personnage Jouable</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
