<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inscription</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-light">

    <!-- Navbar inclus -->
    <%- include('partials/navbar') %>

    <!-- Conteneur principal centré avec un fond secondaire -->
    <div class="container-fluid min-vh-100 d-flex justify-content-center align-items-center bg-secondary text-light">
        <div class="row justify-content-center w-100">
            <div class="col-md-6 text-center">
                <!-- Titre -->
                <h1 class="display-2 text-warning mb-4">Inscription</h1>
                
                <!-- Message d'instruction -->
                <p class="fs-3 text-light">Créez votre compte pour commencer l'aventure !</p>

                <!-- Formulaire d'inscription -->
                <form action="/register" method="POST" class="d-flex flex-column align-items-center">
                    <div class="mb-4">
                        <label for="username" class="form-label text-light">Nom d'utilisateur</label>
                        <input type="text" id="username" name="username" class="form-control" required>
                    </div>
                <!--     <div class="mb-4">
                        <label for="email" class="form-label text-light">Email</label>
                        <input type="email" id="email" name="email" class="form-control" required>
                    </div> -->
                    <div class="mb-4">
                        <label for="password" class="form-label text-light">Mot de passe</label>
                        <input type="password" id="password" name="password" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-warning btn-lg">S'inscrire</button>
                </form>
                
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
