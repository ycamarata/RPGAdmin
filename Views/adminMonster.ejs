<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gérer les Monstres</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-secondary text-light">

    <!-- Navbar inclus -->
    <%- include('partials/navbar') %>
    <%- include('partials/adminBackButton') %>
    <div class="container d-flex flex-column justify-content-center align-items-center">
        <h1 class="text-center text-warning">Gestion des Monstres</h1>

        <!-- Affichage des messages flash -->
        <% if (success_msg) { %>
            <div class="alert alert-success text-center w-25">
                <%= success_msg %>
            </div>
        <% } %>
        <% if (error_msg) { %>
            <div class="alert alert-danger text-center w-25">
                <%= error_msg %>
            </div>
        <% } %>

        <div class="row justify-content-center">
            <!-- Formulaire à gauche -->
            <div class="col-md-12">
                <h2 class="text-warning text-center">Ajouter un Monstre</h2>
                <form action="/admin/monsters" method="POST" class="d-flex flex-column">
                    <div class="mb-4">
                        <label for="name" class="form-label fs-4">Nom du Monstre</label>
                        <input type="text" id="name" name="name" class="form-control fs-4" required>
                    </div>
                    <div class="mb-4">
                        <label for="hp" class="form-label fs-4">Points de Vie (HP)</label>
                        <input type="number" id="hp" name="hp" class="form-control fs-4" required>
                    </div>
                    <div class="mb-4">
                        <label for="attack" class="form-label fs-4">Attaque</label>
                        <input type="number" id="attack" name="attack" class="form-control fs-4" required>
                    </div>
                    <div class="mb-4">
                        <label for="defense" class="form-label fs-4">Défense</label>
                        <input type="number" id="defense" name="defense" class="form-control fs-4" required>
                    </div>
                    <button type="submit" class="btn btn-dark btn-lg text-warning">Ajouter Monstre</button>
                </form>
            </div>
        </div>

        <!-- Bouton pour afficher tous les monstres -->
        <div class="mt-4">
            
            <a href="/admin/monsters/add" class="btn btn-info text-dark">Voir les Monstres Enregistrés</a>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
